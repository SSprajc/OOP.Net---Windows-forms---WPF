<UserControl x:Class="WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d"
             d:DesignHeight="130" d:DesignWidth="120"
             PreviewMouseLeftButtonDown="UserControl_PreviewMouseLeftButtonDown">
    <Grid Margin="5" Background="AntiqueWhite">

        <Button x:Name="btnNumber" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="50" FontWeight="Bold"
                Width="80" Height="80" Margin="2" Content="00"/>

        <Label x:Name="lblName" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="10" FontWeight="Bold"
               Width="110" Height="30" Margin="0, 1, 0, 2" Content="Ime Prezime" Foreground="Black"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</UserControl>
